@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<gds-row>
    <gds-column desktop-size="TwoThirds" tablet-size="FullWidth">

        <gds-heading heading-type="H1" text="@(Model.ErrorTitle)"></gds-heading>

        <gds-paragraph>
            @(Model.ErrorMessage)
            @if (Model.InsertLink)
            {
                @(Model.LinkPreMessage)
                <gds-link class="govuk-link" link-text=@(Model.LinkMessage) href="@Url.Action("Index", "Home")"></gds-link>
                @(Model.LinkPostMessage)
            }

        </gds-paragraph>
        
        <gds-heading heading-type="H2" text="Get help with this form"></gds-heading>

        <gds-paragraph>
            You can get help on the phone if it's hard for you to do things online.
        </gds-paragraph>

        <gds-paragraph>
            Telephone: 03000 616161<br />
            Monday to Friday, 8:30am to 5.30pm<br />
            Excluding bank holidays<br />
        </gds-paragraph>

    </gds-column>
</gds-row>